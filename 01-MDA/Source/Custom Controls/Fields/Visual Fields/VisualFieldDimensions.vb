Public Class VisualFieldDimensions
    Inherits VisualField

    Private WithEvents myTextField As VisualTextField

    Private myLabel As Label


    Public Sub New(ByVal LazyNode As LazyNode)
        Me.LazyNode = LazyNode
        myTextField = New VisualTextField(VisualFieldLabel("Dimensions"), VisualTextField.TextBoxWidthMedium)
        myTextField.Value = LazyNode.Dimensions

        myLabel = New Label
        With myLabel
            .Location = New Point(myTextField.Location.X + myTextField.Width + 10, myTextField.Location.Y + 3)
            .Text = VisualFieldLabel("DimensionsFormatUnit")
            .AutoSize = True
        End With



        Me.Size = New Size(myLabel.Location.X + myLabel.Width, myTextField.Height)
        Me.Controls.Add(myTextField)
        Me.Controls.Add(myLabel)
    End Sub




    Private Sub Upload(ByVal EventCode As Integer, ByVal Value As Object) Handles myTextField.ValueChanged
        LazyNode.Dimensions = CStr(Value)
        RaiseEventDataChanged(Me, Value)
    End Sub

End Class
